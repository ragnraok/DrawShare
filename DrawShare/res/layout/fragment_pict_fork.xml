<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/origin_version"
        android:layout_marginLeft="10dp"
        android:id="@+id/pict_fork_source_version"/>
	<RelativeLayout android:layout_below="@id/pict_fork_source_version"
	    android:id="@+id/pict_fork_source_pict_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="10dp">
	    <FrameLayout android:id="@+id/pict_fork_source_pict_frame"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:layout_marginLeft="10dp">
	        <ImageView android:id="@+id/pict_fork_source_image"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:scaleType="fitXY"
	            android:src="@drawable/default_pict_temp"/>
	        <ImageView android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/radius_shadow_435"
	            android:scaleType="fitXY"/>
	    </FrameLayout>
	    <LinearLayout android:layout_toRightOf="@id/pict_fork_source_pict_frame"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="40dp">
	        <FrameLayout android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_gravity="center">
	            <ImageView android:id="@+id/pict_fork_source_user_avatar_image"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:src="@drawable/default_pict_temp"
	                android:scaleType="fitXY"/>
	            <ImageView android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:src="@drawable/radius_shadow_98"
	                android:scaleType="fitXY"/>
	        </FrameLayout>
	        <TextView android:id="@+id/pict_fork_source_username_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:text="@string/loading"
	            android:layout_gravity="center"/>
	        <TextView android:id="@+id/pict_fork_source_title_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:text="@string/loading"
	            android:textSize="10dp"
	            android:textColor="#6C7B8B"
	            android:layout_gravity="center"/>
	        <TextView android:id="@+id/pict_fork_source_date_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="5dp"
	            android:text="@string/loading"
	            android:textSize="10dp"
	            android:textColor="#6C7B8B"
	            android:layout_gravity="center"/>
	    </LinearLayout>
	</RelativeLayout>
	<ImageView android:layout_below="@id/pict_fork_source_pict_layout"
	    android:id="@+id/pict_fork_fork_version"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/fork_version"
        android:layout_marginLeft="10dp" />
	<RelativeLayout android:layout_below="@id/pict_fork_fork_version"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp">
		<GridView 
		    android:id="@+id/pict_fork_grid"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:numColumns="5"
		    android:columnWidth="100dp"
		    android:horizontalSpacing="5dp"
		    android:verticalSpacing="5dp"/>
		<ProgressBar android:id="@+id/pict_fork_progress_bar"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_centerInParent="true"
		    android:indeterminate="true"/>
	</RelativeLayout>
</RelativeLayout>