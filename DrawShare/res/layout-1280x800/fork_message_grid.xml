<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/message_line" >
    <FrameLayout android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/fork_message_grid_avatar_layout">
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/default_pict_temp"
            android:id="@+id/fork_message_grid_avatar_image"/>
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/radius_shadow_118"/>
    </FrameLayout>
	<LinearLayout android:layout_toRightOf="@id/fork_message_grid_avatar_layout"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginLeft="10dp">
	    <TextView android:id="@+id/fork_message_grid_origin_pict_title_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/loading"
	        android:textColor="#A3A3A3"
	        android:layout_marginTop="15dp"
	        android:textSize="20dp"/>
	    <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:text="@string/loading"
	        android:id="@+id/fork_message_grid_change_promote_text"
	        android:textColor="#A3A3A3"/>
	</LinearLayout>
	<TextView android:id="@+id/fork_message_grid_fork_date_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="15dp"
	    android:text="@string/loading"
	    android:textColor="#A3A3A3"/>
</RelativeLayout>