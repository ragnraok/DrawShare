	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/pict_show_pict_meta_layout">
	<TextView android:id="@+id/pict_show_pict_name_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/loading"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"/>
	<TextView android:layout_alignParentRight="true"
	    android:id="@+id/pict_show_pict_date_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/loading"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"/>
	</RelativeLayout>
	<RelativeLayout android:layout_below="@id/pict_show_pict_meta_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_margin="10dp">
	<ImageView android:id="@+id/pict_show_pict_image"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_centerInParent="true"
	    android:scaleType="fitXY"/>	
	<ProgressBar android:id="@+id/pict_show_progress_bar"
	    android:layout_width="50dp"
	    android:layout_height="50dp"
	    android:indeterminate="true"
	    android:layout_centerInParent="true"/>
	</RelativeLayout>
</RelativeLayout>
