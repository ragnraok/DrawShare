<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/hotest_background">
    <ImageView android:id="@+id/hotest_pict_head_image"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:src="@drawable/default_head"
	    android:layout_marginTop="-6.5dp"
	    android:layout_alignParentTop="true"
	    />	
	<GridView android:layout_below="@id/hotest_pict_head_image"
	    android:id="@+id/hotest_pict_pict_grid"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:numColumns="5"
		 android:verticalSpacing="5dp"
		 android:horizontalSpacing="5dp"
		 />
	<ImageView android:layout_below="@id/hotest_pict_pict_grid"
	    android:id="@+id/hotest_pict_logo_image"
	    android:src="@drawable/drawshare_logo"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"/>
	<android.support.v4.view.ViewPager 
	    android:layout_below="@id/hotest_pict_logo_image"
	    android:src="@drawable/function_intro"
		android:layout_width="fill_parent"
		android:layout_height="220dp"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginTop="15dp"
		android:id="@+id/hotest_pict_function_intro_view_pager"/>
	<RelativeLayout android:layout_below="@id/hotest_pict_function_intro_view_pager"
	    android:layout_width="fill_parent"
		 android:layout_height="wrap_content"
		 android:background="@drawable/setting_panel"
		 android:layout_marginTop="10dp"
		 android:layout_alignParentBottom="true">
		 <LinearLayout android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_centerHorizontal="true"
		    android:gravity="center">
		    	<Button android:id="@+id/hotest_pict_register_button"
		    	    android:layout_width="wrap_content"
		    	    android:layout_height="wrap_content"
		    	   	android:background="@drawable/register_button_selector"/>
		    	<Button android:id="@+id/hotest_pict_login_button"
		    	    android:layout_width="wrap_content" 
		    	    android:layout_height="wrap_content"
		    	    android:background="@drawable/login_button_selector"
		    	    android:layout_marginLeft="10dp"/>
		 </LinearLayout>
	</RelativeLayout>    
</RelativeLayout>
